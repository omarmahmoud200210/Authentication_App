<%- include('partials/header') %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-indigo-900 to-purple-900 flex items-center justify-center px-4 py-12">
  <div class="max-w-md w-full bg-white/5 backdrop-blur rounded-3xl border border-white/10 shadow-2xl p-10 space-y-8">
    <div class="space-y-2 text-center text-white">
      <p class="text-xs uppercase tracking-[0.4em] text-indigo-300">Secure access</p>
      <h1 class="text-3xl font-semibold">Sign in to continue</h1>
      <p class="text-sm text-indigo-200">Use your credentials to unlock the dashboard.</p>
    </div>

    <% if (typeof success !== 'undefined' && success) { %>
    <div class="rounded bg-green-100 border border-green-400 text-green-700 px-4 py-3 text-sm text-center">
      <div><%= success %></div>
    </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error) { %>
    <div class="rounded bg-red-100 border border-red-400 text-red-700 px-4 py-3 text-sm text-center">
      <div><%= error %></div>
    </div>
    <% } %>

    <form action="/auth/login" method="POST" class="space-y-6">
      <div class="space-y-1">
        <label for="email" class="block text-sm font-medium text-indigo-100">Email address</label>
        <input
          id="email"
          name="email"
          type="email"
          autocomplete="email"
          required
          class="block w-full rounded-2xl bg-white/10 px-4 py-3 text-sm text-white placeholder:text-gray-400 focus:border-indigo-400 focus:outline-none"
        />
      </div>

      <div class="space-y-1">
        <div class="flex items-center justify-between">
          <label for="password" class="text-sm font-medium text-indigo-100">Password</label>
          <a href="#" class="text-sm font-semibold text-indigo-300 hover:text-indigo-200">Forgot password?</a>
        </div>
        <input
          id="password"
          name="password"
          type="password"
          autocomplete="current-password"
          required
          class="block w-full rounded-2xl bg-white/10 px-4 py-3 text-sm text-white placeholder:text-gray-400 focus:border-indigo-400 focus:outline-none"
        />
      </div>

      <button
        type="submit"
        class="w-full rounded-2xl bg-gradient-to-r from-indigo-500 to-purple-500 px-4 py-3 text-sm font-semibold text-white shadow-lg transition hover:from-indigo-600 hover:to-purple-600"
      >
        Sign in
      </button>
    </form>

    <p class="text-center text-sm text-indigo-200">
      Not a member yet?
      <a href="/auth/register" class="font-semibold text-white hover:text-gray-200">Create an account</a>
    </p>
  </div>
</div>

<%- include('partials/footer') %>
